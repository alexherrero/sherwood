# General Configuration
PORT=8080
HOST=0.0.0.0
TRADING_MODE=dry_run
DATABASE_PATH=./data/sherwood.db
LOG_LEVEL=info

# Robinhood Credentials (required for live trading)
RH_USERNAME=your_email@example.com
RH_PASSWORD=your_password
RH_MFA_CODE=your_device_mfa_secret

# Redis URL (optional, for caching)
REDIS_URL=

# Binance Configuration
# Set to "true" for US users (default), "false" for international
BINANCE_USE_US=true
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Tiingo API Key (get free at https://www.tiingo.com/)
TIINGO_API_KEY=your_tiingo_api_key
